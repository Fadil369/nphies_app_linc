# NPHIES Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# NPHIES API Configuration
NPHIES_API_URL=https://api.nphies.sa
NPHIES_CLIENT_ID=your-nphies-client-id
NPHIES_CLIENT_SECRET=your-nphies-client-secret

# OpenAI Configuration (for CopilotKit)
OPENAI_API_KEY=your-openai-api-key

# Azure Configuration
AZURE_STORAGE_CONNECTION=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nphies_db

# Logging
LOG_LEVEL=info
LOG_FILE=logs/nphies-backend.log

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# NPHIES Specific
NPHIES_TIMEOUT_MS=30000
NPHIES_RETRY_ATTEMPTS=3
NPHIES_CACHE_TTL=300

# Monitoring
HEALTH_CHECK_INTERVAL=60000
METRICS_ENABLED=true
SENTRY_DSN=your-sentry-dsn